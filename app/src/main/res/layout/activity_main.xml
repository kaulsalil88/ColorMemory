<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="handler"
            type="colormemory.com.colormemory.MainActivity"></variable>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="colormemory.com.colormemory.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/tv_currentscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/logo" />

                <TextView
                    android:id="@+id/tv_highscore"
                    android:text="@string/highscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <TableLayout
            android:id="@+id/tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TableRow

                >

                <ImageView
                    android:id="@+id/iv_00"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_01"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_02"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_03"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_10"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_11"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_12"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_13"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_20"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_21"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_22"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_23"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_30"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_31"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_32"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />

                <ImageView
                    android:id="@+id/iv_33"
                    android:layout_width="@dimen/cardsize"
                    android:layout_height="@dimen/cardsize"
                    android:background="@drawable/card_bg"
                    android:onClick="@{(v)->handler.onClick(v)}" />
            </TableRow>

        </TableLayout>


    </RelativeLayout>
</layout>